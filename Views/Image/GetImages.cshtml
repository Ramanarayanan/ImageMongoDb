
@{
    ViewData["Title"] = "GetImages";
}

<h1>GetImages</h1>
<div id="example">
    <div id="grid"></div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script src="https://kendo.cdn.telerik.com/2022.1.119/js/kendo.all.min.js"></script>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="https://kendo.cdn.telerik.com/2022.1.119/styles/kendo.common.min.css" />
<link rel="stylesheet" href="https://kendo.cdn.telerik.com/2022.1.119/styles/kendo.blueopal.min.css" />

<script src="~/js/site.js" asp-append-version="true"></script>
<script>

                     @*function(data) {
                                var v = "@Url.Content(Convert.ToString("~/Kendo/RetrieveImageFile/"))" + data.id;
                               return "<img src =" + v + "  width:'100%' height:'100%' />"
                                  }*@


                $("#grid").kendoGrid({
                    dataSource: {
                        transport: {
                            read: {
                                url: "http://localhost:5001/Image/GetData",
                                dataType: 'json'
                            }
                        },
                        pageSize: 20
                    },
                    height: 550,
                    groupable: true,
                    sortable: true,
                    pageable: {
                        refresh: true,
                        pageSizes: true,
                        buttonCount: 5
                    },
                    columns: [{
                        template: "<div class='customer-name'>#: id #</div>",
                        field: "id",
                        title: "Contact Name",
                        width: 240
                    }, {
                            field: "Name",
                            title: "Name"
                    }, {
                            field: "ImageName",
                            title: "ImageName"
                    }, {
                        field: "id",
                        width: 150
                    }]
                });

</script>

